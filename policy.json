{
    "Version": "2012-10-17",
    "Statement": [        
        {
            "Sid": "AccessS3Storage",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::your-bucket-access-policy",
                "arn:aws:s3:::your-bucket-access-policy/*"
            ]
        }, {
            "Sid": "AccessCloudWatchLog",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:${DEPLOYMENT_REGION}:${DEPLOYMENT_ACCOUNT}:log-group:/aws/lambda/${FUNCTION_NAME}:log-stream:*"
            ]
        }
    ]
}
